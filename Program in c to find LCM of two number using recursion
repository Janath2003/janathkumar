#include <stdio.h> 
int main() 
{ 
    int a, b, result; 
     
    scanf("%d%d", &a, &b); 
    result = LCM(a, b); 
    printf("The LCM of %d and %d is %d\n", a, b, result); 
    return 0; 
} 
int LCM(int a, int b) 
{  
    static int m = 1; 
 
    if (m % a == 0 && m % b == 0) 
    { 
        return m; 
    } 
    m++; 
    LCM(a, b); 
    return m; 
} 
